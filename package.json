{
  "name": "react-hapi-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React with a Hapi server",
  "scripts": {
    "hmr": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node src/server/hmr/index.js",
    "dev-server": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node src/server/dev/index.js",
    "dev-client": "cross-env NODE_ENV=development webpack --config webpack/webpack.dev.js --watch",
    "preprod": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js ",
    "prod": "cross-env NODE_ENV=production node src/server/prod/index.js",
    "start": "npm-run-all --parallel dev-server dev-client"
  },
  "author": "George Filippakis <geo.filippakis@gmail.com> (https://github.com/Darmaiad)",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@babel/register": "^7.0.0",
    "axios": "^0.18.0",
    "clean-webpack-plugin": "^1.0.1",
    "crumb": "^7.2.3",
    "dotenv": "^6.2.0",
    "hapi": "^18.1.0",
    "hapi-auth-cookie": "^9.1.0",
    "hapi-auth-jwt2": "^8.3.0",
    "hapi-react-views": "^10.0.0",
    "hapi-swagger": "^9.3.1",
    "hapi-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "inert": "^5.1.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.1.2",
    "uuid": "^3.3.2",
    "vision": "^5.4.4",
    "webpack": "^4.29.3",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.5.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-hot-middleware": "^2.24.3"
  },
  "keywords": [
    "react",
    "hapi",
    "redux",
    "react-redux",
    "nodejs",
    "javascript",
    "babel",
    "webpack"
  ],
  "main": "./src/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Darmaiad/react-hapi-boilerplate.git"
  }
}
