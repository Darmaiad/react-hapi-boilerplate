{
  "name": "react-hapi-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React with a Hapi server",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --config webpack.dev.js",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "watch": "webpack --watch",
    "server": "cross-env NODE_ENV=development node server.js",
    "hapi": "cross-env NODE_ENV=development node hapiserver.js && npm run dev",
    "strt": "npm-run-all --parallel hapi dev"
  },
  "author": "George Filippakis <geo.filippakis@gmail.com> (https://github.com/Darmaiad)",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "dotenv": "^6.1.0",
    "handlebars": "^4.0.12",
    "hapi": "^17.7.0",
    "inert": "^5.1.2",
    "joi": "^14.0.4",
    "lodash": "^4.17.11",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "vision": "^5.4.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.4",
    "file-loader": "^2.0.0",
    "hapi-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.3",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.4"
  }
}
