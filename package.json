{
  "name": "react-hapi-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React with a Hapi server",
  "scripts": {
    "hmr": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node src/server/hmr/index.js",
    "dev-server": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node -r dotenv/config src/server/dev/index.js",
    "dev-client": "cross-env NODE_ENV=development webpack --config webpack/webpack.dev.js --watch",
    "preprod": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js ",
    "prod": "cross-env NODE_ENV=production node src/server/prod/index.js",
    "start": "npm-run-all --parallel dev-server dev-client"
  },
  "author": "George Filippakis <geo.filippakis@gmail.com> (https://github.com/Darmaiad)",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@hapi/cookie": "^10.1.0",
    "@hapi/crumb": "^7.3.0",
    "@hapi/hapi": "^18.3.1",
    "@hapi/inert": "^5.2.1",
    "@hapi/joi": "^15.1.0",
    "@hapi/vision": "^5.5.2",
    "axios": "^0.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.0.0",
    "file-loader": "^4.0.0",
    "hapi-auth-jwt2": "^8.6.1",
    "hapi-swagger": "^10.0.2",
    "hapi-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.7.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "url-loader": "^2.0.1",
    "uuid": "^3.3.2",
    "webpack": "^4.35.0",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-async-to-generator": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack-cli": "^3.3.5",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "keywords": [
    "react",
    "hapi",
    "redux",
    "react-redux",
    "nodejs",
    "javascript",
    "babel",
    "webpack"
  ],
  "main": "./src/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Darmaiad/react-hapi-boilerplate.git"
  }
}
