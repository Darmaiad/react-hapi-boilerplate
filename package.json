{
  "name": "react-hapi-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React with a Hapi server",
  "scripts": {
    "hmr": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node src/server/hmr/index.js",
    "dev-server": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node -r dotenv/config src/server/dev/index.js",
    "dev-client": "cross-env NODE_ENV=development webpack --config webpack/webpack.dev.js --watch",
    "preprod": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js ",
    "prod": "cross-env NODE_ENV=production node src/server/prod/index.js",
    "start": "npm-run-all --parallel dev-server dev-client"
  },
  "author": "George Filippakis <geo.filippakis@gmail.com> (https://github.com/Darmaiad)",
  "dependencies": {
    "@babel/register": "^7.6.0",
    "@hapi/cookie": "^10.1.2",
    "@hapi/crumb": "^7.3.2",
    "@hapi/hapi": "^18.4.0",
    "@hapi/inert": "^5.2.2",
    "@hapi/joi": "^16.1.1",
    "@hapi/vision": "^5.5.4",
    "axios": "^0.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.2.1",
    "dotenv": "^8.1.0",
    "file-loader": "^4.2.0",
    "hapi-auth-jwt2": "^8.6.2",
    "hapi-swagger": "^10.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "regenerator-runtime": "^0.13.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^2.1.0",
    "uuid": "^3.3.3",
    "webpack": "^4.40.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "keywords": [
    "react",
    "hapi",
    "redux",
    "react-redux",
    "nodejs",
    "javascript",
    "babel",
    "webpack"
  ],
  "main": "./src/index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Darmaiad/react-hapi-boilerplate.git"
  }
}
