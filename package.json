{
  "name": "react-hapi-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React with a Hapi server",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src/server/**/* --exec node src/server/dev/index.js",
    "preprod": "cross-env NODE_ENV=production webpack --config webpack.prod.js ",
    "prod": "cross-env NODE_ENV=production node src/server/prod/index.js",
    "start": "npm-run-all --parallel server dev-client"
  },
  "author": "George Filippakis <geo.filippakis@gmail.com> (https://github.com/Darmaiad)",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "axios": "^0.18.0",
    "crumb": "^7.2.2",
    "dotenv": "^6.1.0",
    "handlebars": "^4.0.12",
    "hapi": "^17.7.0",
    "hapi-auth-cookie": "^9.0.0",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-swagger": "^9.1.2",
    "inert": "^5.1.2",
    "joi": "^14.0.4",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "uuid": "^3.3.2",
    "vision": "^5.4.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
